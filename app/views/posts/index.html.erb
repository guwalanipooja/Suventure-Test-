<h2> List Post </h2>
<div class="dropdown">
  Select per page post value.
  <%= select_tag :per_page, options_for_select([3,5,10],params[:per_page].to_i),
    :onchange => "if(this.value){window.location='?per_page='+this.value;}" %>
</div>
<div>
  <table class= "table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description </th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td> <%= post.name %> </td>
          <td> <%= post.description %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= will_paginate @posts %>